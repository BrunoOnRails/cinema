<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Filmes</h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Título</th>
        <th>Preço</th>
        <th>Descrição</th>
        <th>Vendendo</th>
        <th>Data de Estreia</th>
        <th>Sai de cartaz</th>
        <th colspan="6"></th>
      </tr>
    </thead>

    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.title %></td>
          <td><%= ticket.price %></td>
          <td><%= ticket.description %></td>
          <td>
            <input type="radio" class="btn-check" name="options" id="option1" autocomplete="off" disabled>
            <%=ticket.selling%>
            <label class="btn btn-success" for="option1">"Sim"</label>
          </td>
          <td><%= ticket.date_int == nil ? ticket.date_int : l(ticket.date_int) %></td>
          <td><%= ticket.date_out == nil ? ticket.date_out : l(ticket.date_out) %></td>
           <div class="btn-group" role="group" aria-label="Basic example">
            <td>
              <%= link_to 'Mostrar', ticket, class:'btn btn-primary'%>
              <%= link_to 'Editar', edit_ticket_path(ticket), class:'btn btn-primary'%>
              <%= link_to 'Excluir', ticket, method: :delete, data: { confirm: 'Tem certeza que deseja excluir esse registro ?' }, class:'btn btn-danger'%>
            </td>
          </div>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%=link_to "Novo Ticket", new_ticket_path, class:"btn btn-success"%>
</div>  