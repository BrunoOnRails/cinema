<%= form_with(model: ticket, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  
  <div class="container px-0 mb-2">
    <div class="row gx-5 row-cols-5">

      <div class="col">
        <div class="form-group">
          <%= form.label :price %>
          <%= form.number_field :price, class: 'form-control' %>
        </div>
      </div>
    </div> 
  </div>   

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', rows:5 %>
  </div>

  <div class="container px-0 mb-2">
    <div class="row gx-5 row-cols-5">

      <div class="col">
        <div class="form-group">
          <%= form.label :date_int %> 
          <%= form.date_field :date_int , class: 'form-control' %>
        </div>
      </div>

      <div class="col">
        <div class="form-group">
          <%= form.label :date_out %>
          <%= form.date_field :date_out, class: 'form-control' %>
        </div>
      </div>
      
    </div>
  </div>

  <div class="form-check form-switch">
    <%= form.label :selling %>
    <%= form.check_box :selling, class: 'form-check-input' %>
  </div>  

  <div id="sessions">
    <div class="row g-1">
      <div class="col-sm-2" id="sessions">
          <%= form.fields_for :sessions do |session| %>
            <%= render 'session_fields', f: session %>
          <%end%>
      </div>

      <div class="col-sm-2" id="hourSessions">
          <%= form.fields_for :hourSessions do |hourSession| %>
            <%= render 'hourSession_fields', f: hourSession %>
          <%end%>
      </div>
    </div>

    <div class="links">
      <!-- COMENTÁRIO: O link_to_add_association é um helper provido pela gem -->
      <%= link_to_add_association 'add experience', form, :sessions %>
      <br><br>
    </div>  

  </div>  

  <%= form.submit class: 'btn btn-primary', data: {disable_with: 'Criando'} %> 
  <%= link_to 'Voltar', tickets_path, class: 'btn btn-secondary' %>

</div>

<% end %>