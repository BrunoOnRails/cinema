<%= form_with(model: ticket, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  
  <div class="container px-0 mb-2">
    <div class="row gx-5 row-cols-5">

      <div class="col">
        <div class="form-group">
          <%= form.label :price %>
          <%= form.number_field :price, class: 'form-control' %>
        </div>
      </div>
    </div> 
  </div>   

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', rows:5 %>
  </div>

  <div class="container px-0 mb-2">
    <div class="row gx-5 row-cols-5">

      <div class="col">
        <div class="form-group">
          <%= form.label :date_int %> 
          <%= form.date_field :date_int , class: 'form-control' %>
        </div>
      </div>

      <div class="col">
        <div class="form-group">
          <%= form.label :date_out %>
          <%= form.date_field :date_out, class: 'form-control' %>
        </div>
      </div>
      
    </div>
  </div>

  <div class="form-check form-switch">
    <%= form.label :selling %>
    <%= form.check_box :selling, class: 'form-check-input' %>
  </div>  

  <%= form_with model: @sessions, local: true do |form| %>
    <div class="container px-0 mb-2">
      <div class="row gx-6 row-cols-6">

        <div class="col">
          <div class="form-group">
            <%= form.label :day %> 
            <%= form.date_field :day , class: 'form-control' %>
          </div>
        </div>

        <div class="col time">
          <%= form.label :session %>
          <%= form.text_field :session, class: "form-control", placeholder: '20:00' %>
        </div>
      </div>
    </div>
  <% end%>

  <%= form.submit class: 'btn btn-primary', data: {disable_with: 'Criando'} %> 
  <%= link_to 'Voltar', tickets_path, class: 'btn btn-secondary' %>

<% end %>